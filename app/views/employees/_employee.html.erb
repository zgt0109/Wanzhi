<tr id="employee_<%= employee.id %>">
	<td><%= employee.name %></td>
	<td><%= employee.department.name %></td>
	<td><%= employee.position.name %></td>
	<td><%= link_to edit_employee_path(employee),remote: true,class: 'ui button basic icon small green' do %>
		<i class="edit icon"></i>修改
		<% end %>
	</td>
	<td><%= link_to employee_path(employee), method: :delete,
	data:{confirm: 'Are you Sure?'}, class: 'ui button basic icon small red' do %>
		<i class="trash icon"></i>删除
		<% end %>
	</td>
</tr>