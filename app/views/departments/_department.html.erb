<tr id="department_<%= department.id %>">
	<td><%= department.name %></td>
	<td><%= link_to edit_department_path(department),remote: true,class: 'ui button basic icon small green' do %>
		<i class="edit icon"></i>修改
		<% end %>
	</td>
	<td><%= link_to department_path(department), method: :delete,
	data:{confirm: "确认删除部门:  #{department.name}  吗?"}, class: 'ui button basic icon small red' do %>
		<i class="trash icon"></i>删除
		<% end %>
	</td>
</tr>