<div class="ui two column middle aligned grid">
    <div class="column">
    	<%= link_to '新增部门', new_department_path,remote: true, class: 'ui button green'%>
    </div>

    <div class="right floated column five wide">
        <%= form_tag '/departments/search' ,class: 'ui form' do %>
	    <div class="ui input">
	      	<%= text_field_tag :keywords, params[:keywords] %>
	      	<%= submit_tag " 搜索  ", class: 'ui button green' %>
	    </div>
    	<% end %>
    </div>
</div>
<table class="ui celled table">
	<thead>
		<tr>
			<th>部门名称</th>
			<th colspan="2">操作</th>
		</tr>
	</thead>
	<tbody>
		<%= render partial: "department", collection: @departments %>
	</tbody>
</table>
<%= link_to '新增部门员工', new_employee_path,remote: true, class: 'ui button green'%>
<%= link_to '员工管理',employees_path, class: 'ui button green'%>
<%= link_to '职位管理',positions_path, class: 'ui button green'%>
<!-- 新增弹出框 -->
<div class="ui modal" id="newDepartment">
	<i class="close icon"></i>
	<div class="header">新增部门</div>
	<div class="content"></div>
</div>

<div class="ui modal" id="editDepartment">
	<i class="close icon"></i>
	<div class="header">修改部门</div>
	<div class="content"></div>
</div>

<div class="ui modal" id="newEmployee">
	<i class="close icon"></i>
	<div class="header">新增部门员工</div>
	<div class="content"></div>
</div>