source 'https://rubygems.org'

gemspec

gem 'rake'
gem 'minitest', '~> 5.5.1'
gem 'rspec', :require => false

gem 'rails', '4.2.0', :require => false
gem 'sqlite3', :platform => [:ruby, :mswin, :mingw]
gem 'activerecord-jdbcsqlite3-adapter', :platform => :jruby

platforms :rbx do
  gem 'rubysl', '~> 2.0'
  gem 'psych'
  gem 'rubinius-developer_tools'
